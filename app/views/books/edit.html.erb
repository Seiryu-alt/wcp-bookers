<h1>
  Editing Book
</h1>

<%= form_with model:@book, local:true do |f| %>
  <% if @book.errors.any? %>
    <div class="form-error">
      <h4>
        <%= pluralize(@book.errors.count, "error") %> 
        prohibited this book from being saved:
      </h4>
      <ul>
        <% @book.errors.full_messages.each do |error_msg| %>
          <li><%= error_msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :body %>
    <%= f.text_area :body %>
  </div>
  <div class="actions">
    <%= f.submit "Update Book" %>
  </div>
<% end %>

<div class="navigation">
  <%= link_to "Show", book_path(@book) %>
  |
  <%= link_to "Back", books_path %>
</div>